    <form action="/postForm"  method="post">
        <!-- 이름 -->
        <h2>이름
            <input type="text" name="name" required/>
        </h2>
        <!-- 성별 선택 -->
        <fieldset>
            <legend>성별</legend>
            <input type="radio" name="gender" id="male" value="male" /><label for="male">남자</label>
            <input type="radio" name="gender" id="female" value="female"  /><label for="female">남자</label>
        </fieldset>
        <!-- 생년 월일 -->
        <fieldset>
            <legend>생년 월일</legend>
            <select name="year" value="year" >
                <% for(let i = 1990; i <= 2023; i++) {  %>
                    <!-- ejs로 데이터 전달하기 value  안에 i를 선택하기-->
                    <option value="<%= i%>"><%= i%></option>
                <% } %>
            </select>년
            <select name="month" value="month">
                <% for(let i = 1; i <= 12; i++){ %>
                    <option value="<%= i %>"><%= i%></option>
                <% } %>
            </select>월
            <select name="date" value="day">
                <% for(let i = 1; i <= 31; i++){ %>
                    <option value="<%= i%>"><%= i%></option>
                <%}%>
            </select>일
        </fieldset>
        <!-- 관심사 -->
        <fieldset>
            <legend>관심사</legend>
            <input type="checkbox" name="travel" value="travel"/>여행
            <input type="checkbox" name="food" value="food" />음식
            <input type="checkbox" name="fashion" value="fashion" />패션
        </fieldset>
        <fieldset>
            <legend>선택</legend>
            좋아하는 색: <input type="color" name="color" value="#000000" />
            좋아하는 숫자: <input type="number" max="10" min="1" value="1">
        </fieldset>
        <button type="submit">회원가입</button>
    </form>

